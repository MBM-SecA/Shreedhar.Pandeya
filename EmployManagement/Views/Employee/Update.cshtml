@model Person;
@{
    ViewData["Title"] = "Update Employee";
}

@{
    string[] genders = {"Male", "Female", "others"};
}

<h3>Update New Employee</h3>

<form asp-controller="Employee" asp-action="Update" method="POST">
    <div class="form-row">
        <input type="hidden" asp-for="ID"/>
        <div class="form-group col-md-6">
            <label asp-for="FirstName"></label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
            <input type="text" class="form-control" asp-for="FirstName" placeholder="First Name" required>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Surname"></label>
            <span class="text-danger" asp-validation-for="Surname"></span>
            <input type="text" class="form-control" asp-for="Surname" placeholder="Last Name" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Gender"></label><br>
            @foreach (var gender in genders)
            {
                <input type="radio" asp-for="Gender" value="@gender[0]" /> @gender
            }
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Salary"></label>
            <input type="number" class="form-control" asp-for="Salary" placeholder="Salary">
        </div>
    </div>
    
        <div class="form-group">
            <label asp-for="Address"></label>
            <input type="text" class="form-control" placeholder="Address" asp-for="Address">
        </div>
        
    <button type="submit" class="btn btn-primary">Update Employee</button>
</form>