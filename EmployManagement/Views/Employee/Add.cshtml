@model Person
@{
    ViewData["Title"] = "Add Employee";
    string[]genders = {"Male" , "Female", "others"};
}


<h3>Add New Employee</h3>
<hr/>

<form  asp-controller = "Employee" asp-action = "Add" method = "POST">

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input type="string" class="form-control" asp-for= " FirstName" placeholder="Enter First Name">
    </div>  
    <div class="form-group">
        <label asp-for="Surname"></label>
        <input type="string" class="form-control" asp-for = "Surname" placeholder="Enter Sur Name">
    </div>  
    <div class="form-group">
        <label asp-for="Address"></label>
        <input type="string" class="form-control" asp-for ="Address" placeholder="Enter Address">
    </div>  
     <div class="form-group">
        <label asp-for="Gender"></label>
        <span asp-validation-for="Gender" class="text-danger"></span>
        @foreach (var gender in genders)
        {
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Gender" value="@gender">
                <label class="form-check-label" asp-for="@gender">@gender</label>
            </div>
        }
    </div>

    

    </div>  

    <div class="form-group">
        <label asp-for="Salary"></label>
        <input type="iint" class="form-control" asp-for = "Salary" placeholder="Enter Salary">
    </div>  





    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>